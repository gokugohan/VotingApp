@page
@model VotingApp.Areas.Identity.Pages.Account.Manage.PermissionsModel

@{
    ViewData["Title"] = "Roles";
    ViewData["ActivePage"] = ManageNavPages.Permissions;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="table-responsive">
    <table class="table table-hover" id="table-permissions">
        <thead>
            <tr>
                <th>Code</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PermissionItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
