@model VotingApp.Models.CreatePollingStationArea

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Municipality</label>
        <select id="AreaMunicipality" class="form-control" asp-items="ViewBag.Municipalities">
            <option></option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Administrative Post</label>
        <select id="AdministrativePost" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="AreaId" class="control-label">Suco/Village</label>
        <select asp-for="AreaId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StationName" class="control-label"></label>
        <input asp-for="StationName" class="form-control" />
        <span asp-validation-for="StationName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
