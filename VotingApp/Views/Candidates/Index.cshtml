@model IEnumerable<VotingApp.Data.Candidate>

@{
    ViewData["Title"] = "Candidates";
}

<a asp-action="Create" class="btn btn-success rounded-pill shadow-sm pull-right mb-3"><i class="fa fa-plus"></i> Create New</a>

<header class="text-center text-white mb-5">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="font-italic mb-0">Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...</p>
</header>


<div class="p-5">
    <div class="row text-center">
        @foreach (var item in Model)
        {

            <div class="col-xl-3 col-sm-6 mb-5">
                <div class="bg-white rounded shadow-sm py-5 px-4">
                    @if (string.IsNullOrEmpty(item.Avatar))
                    {
                        <img src="~/images/no-photo.jpg" alt="@item.Name" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                    }
                    else
                    {
                        <img src="~/images/candidates/@item.Avatar" alt="@item.Name" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">

                    }
                    <h5 class="mb-0">@item.Name</h5><span class="small text-uppercase text-muted">@item.Description</span>
                    <ul class="social mb-0 list-inline mt-3">
                        <li class="list-inline-item">
                            <a data-id="@item.Id" data-title="@item.Name" href="#!" class="btn btn-primary btn-edit-candidate btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="Update"><i class="fa fa-edit"></i></a>
                        </li>

                        <li class="list-inline-item">
                            <a data-id="@item.Id" data-title="@item.Name" href="#!" class="btn btn-danger btn-delete-candidate btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></a>
                        </li>
                    </ul>
                </div>

            </div>

        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-view" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("body").on("change", ".custom-file-input", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });

            $("body").on("click", ".btn-edit-candidate", function () {
                showPreLoader();
                $("#modal-view .modal-title").html("Edit " + $(this).data("title"));
                $.ajax({
                    url: "/Candidates/Edit/" + $(this).data("id"),
                    method: "get",
                    success: function (response) {
                        
                        $("#modal-view .modal-body").html(response);
                        $("#modal-view").modal("show");

                    }
                }).done(function (e) {
                    hidePreLoader();
                })
            });

            $("body").on("click", ".btn-delete-candidate", function () {
                showPreLoader();
                $("#modal-view .modal-title").html("Delete " + $(this).data("title"));
                $.ajax({
                    url: "/Candidates/Delete/" + $(this).data("id"),
                    method: "get",
                    success: function (response) {
                        
                        $("#modal-view .modal-body").html(response);
                        $("#modal-view").modal("show");

                    }
                }).done(function (e) {
                    hidePreLoader();
                })
            });
        })
    </script>
}
