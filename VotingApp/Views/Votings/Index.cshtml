@model IEnumerable<VotingApp.Data.Candidate>

@{
    ViewData["Title"] = "Votings";
    var isFirstItem = true;
    var avatar = "";
}


@section css{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

    <style>

        .card-img-top {
            max-height: 250px;
        }

        .hover {
            overflow: hidden;
            position: relative;
            padding-bottom: 60%;
        }

        .hover-overlay {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 90;
            transition: all 0.4s;
        }

        .hover img {
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            transition: all 0.3s;
        }

        .hover-content {
            position: absolute;
            top: 50%;
            left: 50%;
            z-index: 99;
            transition: all 0.4s;
            transform: translate(-50%,-50%);
        }

        .hover .hover-overlay {
            background: rgba(0, 0, 0, 0.5);
        }
    </style>
}


<a asp-action="Create" class="btn btn-success rounded-pill shadow-sm pull-right mb-3"><i class="fa fa-plus"></i> Create New</a>

<header class="text-center text-white mb-5">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="font-italic mb-0">Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...</p>
</header>


<div class="container-fluid">
    <div class="px-lg-5">
        <div class="row">
            @foreach (var item in Model)
            {
                avatar = !string.IsNullOrEmpty(item.Avatar) ? $"/images/candidates/{item.Avatar}" : "/images/no-photo.jpg";

                <div class="col-xl-3 col-lg-4 mb-4">
                    <div class="bg-white rounded shadow-sm">
                        <img src="@avatar" alt="@item.Name" class="img-fluid card-img-top">
                        <div class="p-4">
                            <h5> <a asp-action="Candidate" asp-route-id="@item.Id" class="text-dark">@item.Name</a></h5>
                            
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


